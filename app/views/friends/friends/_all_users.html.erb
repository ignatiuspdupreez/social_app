<div class="container">
  <div class="row">
    <% @lists.all_users.each do |user| %>
        <% present(user) do |presented_user| %>
            <div class="col-sm-3">

              <div class="card hovercard">
                <div class="cardheader">

                </div>
                <div class="profile-content">
                  <div class="avatar">
                    <% if user.profile_picture.file.blank? %>
                        <%= image_tag 'nobody_m.original.jpg' %>
                    <% else %>
                        <%= image_tag user.profile_picture.url %>
                    <% end %>
                  </div>
                  <div class="info">
                    <div class="title">
                      <%= link_to(user.name_to_display, profile_path(user)) %>
                    </div>
                    <div class="desc"><%= presented_user.full_names %></div>
                    <div class="desc"><%= presented_user.joined %></div>
                    <div class="desc"><%= presented_user.birthday %></div>
                    <div class="desc"><%= presented_user.birth_place %></div>
                    <div class="desc"><%= presented_user.nation %></div>

                  </div>
                  <div class="bottom">
                    <%= presented_user.buttons %>
                  </div>
                </div>
              </div>
            </div>
            <script>profile.init(<%= user.id %>)</script>
        <% end %>
    <% end %>
  </div>
</div>